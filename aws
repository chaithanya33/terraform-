#aws launch template in ami to atteach auto scalling groups in terraform it is c#cal#led as a aws_configuration

resource "aws_configuration"
name = "terraform-lt"

image_id = "ami    "     #launch template in aws 
instance_type = "t2.micro"
Key_name = "key pair"
security_group = [aws_security_group.mysg.id]

#we also insert script here to automatically purpose

user_data = <<-EOF
 #!/bin/bash
 sudo yum update -y
 sudo yum install httpd -y
 sudo systemctl start httpd
 sudo systemctl enable httpd
 sudo systemctl restart httpd
 sudo chmod 766 /var/www/html/index.html
 sudo echo "<html><body><h1>Welcome to Terraform Scaling.</h1></body></html>"
>/var/www/html/index.html
 EOF
 }


 
